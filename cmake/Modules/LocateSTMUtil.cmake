FUNCTION(STM32_SET_FILE_NAMES out)
    SET(res "")
    FOREACH(I ${ARGN})
        GET_FILENAME_COMPONENT(TMP ${I} NAME)
        LIST(APPEND res ${TMP})
    ENDFOREACH()
    SET(${out} "${res}" PARENT_SCOPE)
ENDFUNCTION()

FUNCTION(STM32_PREPEND_FILE_NAMES out prefix)
    SET(res "")
    FOREACH(I ${ARGN})
        LIST(APPEND res "${prefix}${I}")
    ENDFOREACH()
    SET(${out} "${res}" PARENT_SCOPE)
ENDFUNCTION()

